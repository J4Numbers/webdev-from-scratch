{% extends "layouts/base.njk" %}

{% block content %}
  <div class="logo">
    <h1>WebDev From Scratch</h1>
  </div>

  <div class="introduction-box spaced-item">
    <div class="introduction-icon row">
      <div class="mx-auto my-auto">
        <i class="fa fa-home fa-3x"></i>
      </div>
    </div>
    <div class="introduction-text">
      <p>Welcome to the WebDev from Scratch website.</p>
      <p>Please take a look around</p>
      <p style="text-align: right">@J4numbers</p>
    </div>
  </div>

  <div class="course-selector spaced-item">
    <div id="course-selector" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#course-selector" data-slide-to="0" class="active"></li>
        <li data-target="#course-selector" data-slide-to="1"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <svg class="bd-placeholder-img bd-placeholder-img-lg d-block w-100"
               width="800" height="400" xmlns="http://www.w3.org/2000/svg"
               preserveAspectRatio="xMidYMid slice" focusable="false" role="img"
               aria-label="Placeholder: First slide">
            <title>Placeholder</title>
            <rect width="100%" height="100%" fill="#777"
                  style="--darkreader-inline-fill:#5a6165;"
                  data-darkreader-inline-fill=""></rect>
            <text x="50%" y="50%" fill="#555" dy=".3em"
                  style="--darkreader-inline-fill:#b2aca2;"
                  data-darkreader-inline-fill="">First slide</text>
          </svg>
          <div class="carousel-caption d-none d-md-block">
            <h3 class="h5"><a href="#">First course</a></h3>
            <p>A course on starting with HTML/CSS/JS</p>
          </div>
        </div>
        <div class="carousel-item">
          <svg class="bd-placeholder-img bd-placeholder-img-lg d-block w-100"
               width="800" height="400" xmlns="http://www.w3.org/2000/svg"
               preserveAspectRatio="xMidYMid slice" focusable="false" role="img"
               aria-label="Placeholder: Second slide">
            <title>Placeholder</title>
            <rect width="100%" height="100%" fill="#666"
                  style="--darkreader-inline-fill:#a8a095;"
                  data-darkreader-inline-fill=""></rect>
            <text x="50%" y="50%" fill="#444" dy=".3em"
                  style="--darkreader-inline-fill:#bdb7af;"
                  data-darkreader-inline-fill="">Second slide</text>
          </svg>
          <div class="carousel-caption d-none d-md-block">
            <h3 class="h5"><a href="#">Second course</a></h3>
            <p>A course on generating dynamic content</p>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#course-selector" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#course-selector" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
{% endblock %}
